# Nombre del ejecutable
TARGET = output/programa

# Los archivos .cpp en la carpeta src
SRCS = $(wildcard src/*.cpp)

# Archivos objeto (.o) generados a partir de los archivos .cpp
OBJS = $(SRCS:.cpp=.o)

# Las opciones de compilaci贸n, agregando -g para depuraci贸n
CFLAGS = -g -Wall

# El objetivo por defecto
all: $(TARGET)

# C贸mo crear el ejecutable
$(TARGET): $(OBJS)
	 g++ $(CFLAGS) -o $(TARGET) $(OBJS)

# C贸mo compilar los archivos .cpp a .o
%.o: %.cpp
	 g++ $(CFLAGS) -c $< -o $@

# Limpiar archivos generados
clean:
	 rm -f src/*.o $(TARGET)
